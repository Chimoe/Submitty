{% extends 'generic/Popup.twig' %}
{% block popup_id %}edit-username-form{% endblock %}
{% block title %}Specify Preferred Name{% endblock %}
{% block body %}
    <p>{{ change_name_text }}</p>
    <p>&emsp;</p>
    <input type="hidden" name="csrf_token" value="{{ core.getCsrfToken() }}" />
    <div>
    	<label for="user_firstname_change">Preferred First Name:&emsp;</label>
        <input type="text" name="user_firstname_change" id="user_firstname_change" />
        <p>&emsp;</p>
    	<label for="user_lastname_change">Preferred Last Name:&emsp;</label>
        <input type="text" name="user_lastname_change" id="user_lastname_change" />
    </div>

{% endblock %}
{% block form %}
    <form method="post" action="{{ core.buildUrl({'page': 'change_username'}) }}">
        {{ parent() }}
    </form>
{% endblock %}
{% block buttons %}
    {{ block('close_button') }}
    <input class="btn btn-primary" type="submit" value="Submit" />
{% endblock %}
